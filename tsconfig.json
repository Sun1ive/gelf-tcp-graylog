{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["node"],
    "incremental": true,
    "strict": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts"]
}
